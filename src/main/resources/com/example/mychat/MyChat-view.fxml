<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.mychat.MyChatController">


    <TextArea fx:id="mainTextArea" VBox.vgrow="ALWAYS" editable="false" ></TextArea>

    <HBox>
        <TextField fx:id="message" editable="true" maxWidth="Infinity" HBox.hgrow="ALWAYS" onAction="#onSendButtonClick"></TextField>
        <Button text="Отправить" onAction="#onSendButtonClick"/>
    </HBox>

</VBox>
